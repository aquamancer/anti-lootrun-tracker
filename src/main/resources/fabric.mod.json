{
	"schemaVersion": 1,
	"id": "anti-lootrun-tracker",
	"version": "${version}",
	"name": "anti-lootrun-tracker",
	"description": "Displays the number of mobs nearby a Chest, made specifically to address Monumenta's LootingLimiter",
	"authors": [
		"aquamancer"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT License",
	"icon": "assets/anti-lootrun-tracker/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
          "com.aquamancer.AntiLootrunTracker"
		],
		"client": [
			"com.aquamancer.AntiLootrunTrackerClient"
		]
	},
	"mixins": [
		"anti-lootrun-tracker.mixins.json",
		{
			"config": "anti-lootrun-tracker.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.20.4",
		"java": ">=17",
		"fabric-api": "*"
	}
}